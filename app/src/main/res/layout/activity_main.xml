<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.example.kimminji.jongpp.MainActivity">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:text="1"
                android:layout_width="250dp"
                android:layout_height="50dp" android:id="@+id/txt1"/>
        <ScrollView
                android:id="@+id/scroll"
                android:layout_width="250dp"
                android:layout_below="@+id/txt1"
                android:layout_height="100dp">
            <TextView
                    android:text="2"
                    android:layout_width="250dp"
                    android:layout_height="100dp" android:id="@+id/txt2"/>
        </ScrollView>

        <Button
                android:text="수신기 선택"
                android:layout_toRightOf="@+id/txt1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/receiver"/>
        <Button
                android:text="경로 안내"
                android:layout_toRightOf="@+id/scroll"
                android:layout_below="@+id/receiver"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/path"/>
    </RelativeLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <Button
                    android:text="M"
                    android:layout_width="50dp"
                    android:layout_height="100dp" android:id="@+id/button21"/>
            <Button
                    android:text="W"
                    android:layout_width="50dp"
                    android:layout_height="100dp" android:id="@+id/button20"/>
            <Button
                    android:text="105"
                    android:layout_width="50dp"
                    android:layout_height="100dp" android:id="@+id/button19"/>
            <Button
                    android:text="104"
                    android:layout_width="100dp"
                    android:layout_height="100dp" android:id="@+id/button18"/>
            <Button
                    android:text="103"
                    android:layout_width="50dp"
                    android:layout_height="100dp" android:id="@+id/button16"/>
            <Button
                    android:text="101"
                    android:layout_width="100dp"
                    android:layout_height="100dp" android:id="@+id/button15"/>
        </TableRow>
        <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <Button
                    android:text=""
                    android:layout_width="25dp"
                    android:layout_height="100dp" android:id="@+id/button23"/>
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_margin="7dp"
                    android:layout_height="match_parent" app:srcCompat="@drawable/point" android:id="@+id/imageView10"/>

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_margin="7dp"
                    android:layout_height="match_parent" app:srcCompat="@drawable/point" android:id="@+id/imageView19"/>
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_margin="7dp"
                    android:layout_height="match_parent" app:srcCompat="@drawable/point" android:id="@+id/imageView18"/>
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_margin="7dp"
                    android:layout_height="match_parent" app:srcCompat="@drawable/point" android:id="@+id/imageView17"/>
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_margin="7dp"
                    android:layout_height="match_parent" app:srcCompat="@drawable/point" android:id="@+id/imageView16"/>
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_margin="7dp"
                    android:layout_height="match_parent" app:srcCompat="@drawable/point" android:id="@+id/imageView15"/>
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_margin="7dp"
                    android:layout_height="match_parent" app:srcCompat="@drawable/point" android:id="@+id/imageView14"/>
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_margin="7dp"
                    android:layout_height="match_parent" app:srcCompat="@drawable/point" android:id="@+id/imageView13"/>
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_margin="7dp"
                    android:layout_height="match_parent" app:srcCompat="@drawable/point" android:id="@+id/imageView12"/>
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_margin="7dp"
                    android:layout_height="match_parent" app:srcCompat="@drawable/point" android:id="@+id/imageView11"/>
            <Button
                    android:text=""
                    android:layout_width="25dp"
                    android:layout_height="100dp" android:id="@+id/button22"/>
        </TableRow>
        <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <Button
                    android:text="Button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/button25"/>
            <Button
                    android:text="Button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/button24"/>
            <Button
                    android:text="Button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/button26"/>
        </TableRow>
    </LinearLayout>

</LinearLayout>
