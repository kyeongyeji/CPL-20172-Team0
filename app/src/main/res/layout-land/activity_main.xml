<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.example.kimminji.jongpp.MainActivity">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:text="1"
                android:layout_width="500dp"
                android:layout_height="50dp" android:id="@+id/txt1"/>
        <ScrollView
                android:id="@+id/scroll"
                android:layout_width="500dp"
                android:layout_height="50dp"
                android:layout_below="@+id/txt1">
            <TextView
                    android:text="1111111\n111111111\n1111111111111111\n11111111111111111\n111111111\n"
                    android:layout_width="500dp"
                    android:layout_height="50dp" android:id="@+id/txt2"/>
        </ScrollView>
        <Button
                android:text="수신기 선택"
                android:layout_toRightOf="@+id/txt1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/receiver"/>
        <Button
                android:text="경로 안내"
                android:layout_toRightOf="@+id/scroll"
                android:layout_below="@+id/receiver"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/path"/>
    </RelativeLayout>
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <Button
                android:text="Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/button2"/>
    </RelativeLayout>

</LinearLayout>
