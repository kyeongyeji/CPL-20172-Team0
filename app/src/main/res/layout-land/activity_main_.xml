<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:text="txt1"
                android:layout_width="500dp"
                android:layout_height="50dp" android:id="@+id/txt1"/>
        <ScrollView
                android:id="@+id/scroll"
                android:layout_width="500dp"
                android:layout_height="50dp"
                android:layout_below="@+id/txt1">
            <TextView
                    android:text="txt2"
                    android:layout_width="500dp"
                    android:layout_height="50dp" android:id="@+id/txt2"/>
        </ScrollView>
        <Button
                android:text="수신기 선택"
                android:layout_toRightOf="@+id/txt1"

                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/receiver"/>
        <Button
                android:text="경로 안내"
                android:layout_toRightOf="@+id/scroll"
                android:layout_below="@+id/receiver"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/path"/>
    </RelativeLayout>
    <RelativeLayout
            android:id="@+id/layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    </RelativeLayout>
</LinearLayout>